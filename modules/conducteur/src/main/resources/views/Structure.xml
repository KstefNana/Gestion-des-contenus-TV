<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

    <grid title="Structures" name="structure-grid" model="com.axelor.conducteur.db.Structure">
        <field name="name" title="Nom de la structure"/>
        <field name="dateCreation" title="Date de création"/>
        <field name="description"/>
    </grid>
    <form title="Structure" name="structure-form" model="com.axelor.conducteur.db.Structure">
        <panel title="Overview">
            <panel colSpan="3">
                <field name="logo" showTitle="false" colSpan="12" widget="image"/>
            </panel>
            <panel colSpan="9">
                <field name="name" title="Nom de la structure"/>
                <field name="dateCreation" title="Date de création"/>
                <field name="description" colSpan="12"/>
            </panel>

        </panel>
    </form>

</object-views>